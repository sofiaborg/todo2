{{#if tasksArr}}

  <div class="viewDiv">
    <div>
      <h5>view tasks by:</h5>
      <a href="/done">done</a>
      <a href="/undone">undone</a>
      <a href="/">all</a>
    </div>
  </div>

  <div class="sortDiv">
    <h5>sort tasks by:</h5>
    <a href="/newest">newest</a>
    <a href="/oldest">oldest</a>
  </div>

  {{#each tasksArr}}

    <ul><li>

        <div class="nameCheck"><h4>{{description}}</h4>
         <p>created at 
         {{time}}</p>

          <form class="check" method="post" action="/{{_id}}/status">
            <input
              name="status"
              type="checkbox"
              value="{{status}}"
            {{#if status}}checked {{/if}}
              onChange="this.form.submit()"
              ;
            />
          </form>

        </div>

        <div class="editDel">
          <a href="/{{_id}}/edit">edit</a>

          <form class="delete" action="/{{_id}}/delete" method="post">
            <input type="submit" value="delete" />
          </form>
        </div>

      </li></ul>
  {{/each}}

{{else}}
  <p>you have no tasks</p>

{{/if}}

<div class="formDiv">
  <form action="/" method="post">
    <input
      class="formField"
      type="text"
      name="description"
      placeholder="I need to..."
      required
    />
    <input type="submit" class="submitBtn" value="+" />
  </form>
</div>